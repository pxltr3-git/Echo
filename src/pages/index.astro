---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';

---

<Layout
    title="Echo | John Ogletree - Digital Creator & Designer"
    description="Welcome to Echo, the personal portfolio of John Ogletree. Explore my creations in web design, development, and digital strategy."
    keywords="John Ogletree, Portfolio, Web Developer, UI/UX Designer, Digital Creator, Astro, JavaScript, Georgia"
    ogUrl="https://your-website.com/"
    ogImage="https://your-website.com/social-preview.png"
    twitterUrl="https://your-website.com/"
    twitterImage="https://your-website.com/social-preview.png"
>
    <div id="promo-banner" class="relative mb-0 overflow-hidden rounded-lg bg-gradient-to-r from-accent to-heading p-4 px-8 text-center text-text shadow-lg transition-all duration-500 ease-in-out">
        <p class="m-0 font-medium text-lg">✨ Exciting News! My portfolio just got a fresh new look! ✨</p>
        <button id="dismiss-banner" class="absolute top-2 right-2 p-2 text-text hover:text-text-light focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
    </div>

    <script is:inline>
        document.addEventListener('DOMContentLoaded', () => {
            const banner = document.getElementById('promo-banner');
            const dismissButton = document.getElementById('dismiss-banner');

            if (banner && dismissButton) {
                dismissButton.addEventListener('click', () => {
                    banner.style.maxHeight = '0';
                    banner.style.paddingTop = '0';
                    banner.style.paddingBottom = '0';
                    banner.style.marginBottom = '0';
                    banner.style.opacity = '0';
                    setTimeout(() => banner.remove(), 500); // Remove after transition
                });
            }
        });
    </script>

    <div class="my-8 flex items-center gap-4">
        <div class="h-px flex-grow bg-border"></div>
        <svg class="flex-shrink-0 fill-text-light" viewBox="0 0 16 16" version="1.1" width="16" height="16" aria-hidden="true"><path d="M2 2.5A2.5 2.5 0 0 1 4.5 0h8.75a.75.75 0 0 1 .75.75v12.5a.75.75 0 0 1-.75.75h-2.5a.75.75 0 0 1 0-1.5h1.75v-2h-8a1 1 0 0 0-.714 1.7.75.75 0 0 1-1.072 1.05A2.495 2.495 0 0 1 2 11.5Z"></path></svg>
        <div class="h-px flex-grow bg-border"></div>
    </div>

    <div class="py-8">
        <div class="overflow-hidden rounded-lg border border-border bg-[#2E282A] text-text shadow-lg">
            <div class="flex items-center gap-2 bg-text-light p-2 px-4 text-xs text-bg">
