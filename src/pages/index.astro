---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import ProfileCard from '../components/ProfileCard.astro';
import svgs from '../data/svgs.json';
---

<Layout
    title="Echo | John Ogletree - Digital Creator & Designer"
    description="Welcome to Echo, the personal portfolio of John Ogletree. Explore my creations in web design, development, and digital strategy."
    keywords="John Ogletree, Portfolio, Web Developer, UI/UX Designer, Digital Creator, Astro, JavaScript, Georgia"
    ogUrl="https://your-website.com/"
    ogImage="https://your-website.com/social-preview.png"
    twitterUrl="https://your-website.com/"
    twitterImage="https://your-website.com/social-preview.png"
>
    

    

    <div class="py-8">
        <div class="overflow-hidden rounded-lg border border-border bg-[#2E282A] text-text shadow-lg">
            <div class="flex items-center gap-2 bg-text-light p-2 px-4 text-xs text-bg">
                <div class="mr-auto flex gap-2">
                    <span class="h-3 w-3 rounded-full" style="background:#ff5f56;"></span>
                    <span class="h-3 w-3 rounded-full" style="background:#ffbd2e;"></span>
                    <span class="h-3 w-3 rounded-full" style="background:#27c93f;"></span>
                </div>
                <span>bash</span>
            </div>
            <div class="min-h-[200px] p-6">
                <p class="m-0 break-all">
                    <span class="text-[#81a2be]">user@echo</span><span class="text-[#b48ead]">:</span><span class="text-[#a3be8c]">~</span><span class="text-[#b48ead]">$</span>
                    <span id="typed-text"></span>
                    <span class="ml-0.5 inline-block w-[0.6em] animate-blink bg-bg"> </span>
                </p>
                <div class="mt-4 border-l-2 border-accent pl-4" id="terminal-output">
                    <h1 class="m-0 mb-2 font-mono font-medium text-heading text-3xl md:text-4xl lg:text-5xl">John Ogletree</h1>
                    <div class="flex flex-wrap items-center gap-x-6 gap-y-4">
                        <p class="m-0 text-text-light text-base md:text-lg">Digital Creator. Problem Solver. Lifelong Learner.</p>
                                                                    <button type="submit" class="w-full inline-flex items-center justify-center rounded-md border border-heading bg-heading py-3 px-8 font-mono font-bold text-text no-underline transition-colors duration-200 hover:border-[#D36C52] hover:bg-[#D36C52] hover:text-text">Subscribe</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    

    <hr class="my-4 border-t-2 border-dashed border-accent/50">

    <section class="about-me-section text-text w-full">
        <h2 class="m-0 mb-6 border-b border-border pb-2 font-mono font-medium text-heading text-xl before:mr-2 before:font-normal before:text-text-light before:content-['##'] md:text-2xl">About Me</h2>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 p-6 rounded-lg border border-border bg-surface shadow-lg">
            <!-- Image Card (Left Column) -->
            <div class="flex flex-col items-center justify-center p-4 rounded-lg border border-border bg-surface shadow-md">
                <div class="relative group">
                    <img
                        src="/favicon.svg"
                        alt="John Ogletree Profile Picture"
                        class="rounded-full w-48 h-48 object-cover transition-transform duration-300 ease-in-out group-hover:scale-105 group-hover:shadow-xl"
                    />
                    <div class="absolute inset-0 rounded-full ring-4 ring-accent opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-in-out"></div>
                </div>
            </div>
            <!-- Profile Content (Right Columns - spans 2 columns on large screens) -->
            <div class="lg:col-span-2 flex flex-col justify-between flex-grow text-center lg:text-left">
                <ProfileCard
                    name="John Ogletree"
                    title="Digital Creator & Developer"
                    description="Passionate about crafting engaging digital experiences with a focus on clean code and user-centric design."
                />
                <blockquote class="mt-4 text-lg italic text-text-light border-l-4 border-accent pl-4">
                    "Design is not just what it looks like and feels like. Design is how it works." - Steve Jobs
                </blockquote>
                <div class="mt-6 w-full flex flex-col sm:flex-row items-center justify-center sm:justify-between gap-4 lg:justify-start">
                    <div class="flex flex-wrap gap-2">
                        <span class="rounded-full bg-[rgba(224,122,95,0.15)] py-1 px-3 text-xs font-medium text-[#B35F48] transition-all duration-200 ease-in-out hover:scale-110 hover:bg-[#B35F48] hover:text-bg">Astro</span>
                        <span class="rounded-full bg-[rgba(38,139,210,0.15)] py-1 px-3 text-xs font-medium text-[#268BD2] transition-all duration-200 ease-in-out hover:scale-110 hover:bg-[#268BD2] hover:text-bg">React</span>
                        <span class="rounded-full bg-[rgba(181,137,0,0.2)] py-1 px-3 text-xs font-medium text-[#b58900] transition-all duration-200 ease-in-out hover:scale-110 hover:bg-[#b58900] hover:text-bg">JavaScript</span>
                    </div>
                    <Button href="/profile" text="Learn More" variant="secondary">
                        <Fragment set:html={svgs['icon-arrow-right']} />
                    </Button>
                </div>
            </div>
        </div>
    </section>


    <hr class="my-4 border-t-2 border-dashed border-accent/50">

    <section class="services-overview w-full">
        <h2 class="m-0 mb-6 border-b border-border pb-2 font-mono font-medium text-heading text-xl before:mr-2 before:font-normal before:text-text-light before:content-['##'] md:text-2xl">Capabilities Overview</h2>
        <div class="flex flex-wrap justify-center gap-6">
            <div class="flex flex-col items-center text-center gap-4 rounded-lg border border-border bg-surface p-8 transition-transform duration-200 ease-out hover:-translate-y-1 hover:shadow-lg w-full sm:w-[calc(50%-12px)] lg:w-[calc(33.333%-16px)]">
                <div class="text-accent p-3 rounded-full bg-accent/10">
                    <Fragment set:html={svgs['icon-code']} />
                </div>
                <h3 class="m-0 font-mono text-xl font-bold text-accent">Web Design & Development</h3>
                <p class="flex-grow text-[0.95rem] leading-relaxed text-text-light">Crafting responsive, high-performance websites from scratch. I focus on clean code and user-centric design to build digital experiences that work beautifully on any device.</p>
            </div>
            <div class="flex flex-col items-center text-center gap-4 rounded-lg border border-border bg-surface p-8 transition-transform duration-200 ease-out hover:-translate-y-1 hover:shadow-lg w-full sm:w-[calc(50%-12px)] lg:w-[calc(33.333%-16px)]">
                <div class="text-accent p-3 rounded-full bg-accent/10">
                    <Fragment set:html={svgs['icon-layout']} />
                </div>
                <h3 class="m-0 font-mono text-xl font-bold text-accent">Interactive Prototyping</h3>
                <p class="flex-grow text-[0.95rem] leading-relaxed text-text-light">Bringing ideas to life with high-fidelity, clickable prototypes. This crucial step allows for user testing and validation before a single line of code is written.</p>
            </div>
            <div class="flex flex-col items-center text-center gap-4 rounded-lg border border-border bg-surface p-8 transition-transform duration-200 ease-out hover:-translate-y-1 hover:shadow-lg w-full sm:w-[calc(50%-12px)] lg:w-[calc(33.333%-16px)]">
                <div class="text-accent p-3 rounded-full bg-accent/10">
                    <Fragment set:html={svgs['icon-strategy']} />
                </div>
                <h3 class="m-0 font-mono text-xl font-bold text-accent">Digital Strategy & Consultation</h3>
                <p class="mb-4">Leveraging user research and analytics to help you make informed decisions. I provide insights that align your digital presence with your business goals for measurable success.</p>
            </div>
            <div class="mt-8 text-center w-full">
                <a href="/services/index" class="inline-flex items-center justify-center rounded-md border border-heading bg-heading py-3 px-8 font-mono font-bold text-text no-underline transition-colors duration-200 hover:border-[#D36C52] hover:bg-[#D36C52] hover:text-text">View All Services</a>
            </div>
        </div>
    </section>

    

    <hr class="my-4 border-t-2 border-dashed border-accent/50">

    <section class="projects-overview w-full">
        <h2 class="m-0 mb-6 border-b border-border pb-2 font-mono font-medium text-heading text-xl before:mr-2 before:font-normal before:text-text-light before:content-['##'] md:text-2xl">Creations Overview</h2>
        <div class="grid grid-cols-[repeat(auto-fit,minmax(300px,1fr))] gap-6">
            <div class="group flex flex-col overflow-hidden rounded-lg border border-border bg-surface transition-transform duration-200 ease-out hover:-translate-y-1 hover:shadow-lg">
                <div class="aspect-video overflow-hidden">
                    <img alt="Abstract code on a screen" class="h-full w-full object-cover transition-transform duration-300 ease-out group-hover:scale-105">
                </div>
                <div class="flex flex-col p-6">
                    <h3 class="m-0 mb-2 font-mono text-xl font-bold text-accent">Echo - Personal Portfolio</h3>
                    <p class="mb-6 flex-grow text-[0.95rem] leading-relaxed text-text-light">The very website you are on. A fully responsive personal hub built with Astro, showcasing a blend of design and modern web technologies.</p>
                    <div class="flex flex-wrap gap-2">
                        <span class="rounded-full bg-[rgba(224,122,95,0.15)] py-1 px-3 text-xs font-medium text-[#B35F48]">Astro</span>
                        <span class="rounded-full bg-[rgba(38,139,210,0.15)] py-1 px-3 text-xs font-medium text-[#268BD2]">CSS</span>
                        <span class="rounded-full bg-[rgba(181,137,0,0.2)] py-1 px-3 text-xs font-medium text-[#b58900]">JavaScript</span>
                    </div>
                </div>
            </div>
             <div class="group flex flex-col overflow-hidden rounded-lg border border-border bg-surface transition-transform duration-200 ease-out hover:-translate-y-1 hover:shadow-lg">
                <div class="aspect-video overflow-hidden">
                    <img alt="Analytics dashboard with charts and graphs" class="h-full w-full object-cover transition-transform duration-300 ease-out group-hover:scale-105">
                </div>
                <div class="flex flex-col p-6">
                    <h3 class="m-0 mb-2 font-mono text-xl font-bold text-accent">QuantumLeap - SaaS Dashboard</h3>
                    <p class="mb-4">A UI/UX concept for a next-generation analytics platform, focusing on data visualization and intuitive user workflows.</p>
                    <div class="flex flex-wrap gap-2">
                        <span class="rounded-full bg-[rgba(163,55,240,0.1)] py-1 px-3 text-xs font-medium text-[#8327c3]">Figma</span>
                        <span class="rounded-full bg-tag-bg py-1 px-3 text-xs font-medium text-accent">UI/UX</span>
                        <span class="rounded-full bg-[rgba(188,71,73,0.15)] py-1 px-3 text-xs font-medium text-[#BC4749]">Prototyping</span>
                    </div>
                </div>
            </div>
             <div class="group flex flex-col overflow-hidden rounded-lg border border-border bg-surface transition-transform duration-200 ease-out hover:-translate-y-1 hover:shadow-lg">
                <div class="aspect-video overflow-hidden">
                    <img alt="Laptop with code and abstract shapes" class="h-full w-full object-cover transition-transform duration-300 ease-out group-hover:scale-105">
                </div>
                <div class="flex flex-col p-6">
                    <h3 class="m-0 mb-2 font-mono text-xl font-bold text-accent">CodeGenius - AI Assistant UI</h3>
                    <p class="mb-4">An interface design for an AI-powered code completion tool, designed to be unobtrusive yet powerful for developers.</p>
                    <div class="flex flex-wrap gap-2">
                        <span class="rounded-full bg-[rgba(42,161,152,0.15)] py-1 px-3 text-xs font-medium text-[#2AA198]">UI Design</span>
                        <span class="rounded-full bg-[rgba(203,75,22,0.15)] py-1 px-3 text-xs font-medium text-[#CB4B16]">UX Research</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-8 text-center">
            <a href="/projects/index" class="inline-flex items-center justify-center rounded-md border border-heading bg-heading py-3 px-8 font-mono font-bold text-text no-underline transition-colors duration-200 hover:border-[#D36C52] hover:bg-[#D36C52] hover:text-text">View All Projects</a>
        </div>
    </section>

    

    <hr class="my-4 border-t-2 border-dashed border-accent/50">

    <section class="forms-section w-full">
        <h2 class="m-0 mb-6 border-b border-border pb-2 font-mono font-medium text-heading text-xl before:mr-2 before:font-normal before:text-text-light before:content-['##'] md:text-2xl">Connect</h2>
        <div class="grid grid-cols-1 items-start gap-6 lg:grid-cols-2">
            <div class="rounded-lg border border-border bg-surface p-8">
                <h3 class="m-0 mb-2 font-mono text-xl font-bold text-accent">Contact Me</h3>
                <p class="mb-4">Have a question or a project in mind? Let's talk. I'm always open to discussing new ideas and opportunities.</p>
                <form action="#" method="POST">
                    <div class="mb-6">
                        <label for="name" class="mb-2 block text-sm font-medium text-text">Name</label>
                        <input type="text" id="name" name="name" required class="box-border w-full rounded-md border border-border bg-surface p-3 font-mono text-base text-text focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/50">
                    </div>
                    <div class="mb-6">
                        <label for="email" class="mb-2 block text-sm font-medium text-text">Email</label>
                        <input type="email" id="email" name="email" required class="box-border w-full rounded-md border border-border bg-surface p-3 font-mono text-base text-text focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/50">
                    </div>
                    <div class="mb-6">
                        <label for="message" class="mb-2 block text-sm font-medium text-text">Message</label>
                        <textarea id="message" name="message" rows="5" required class="box-border w-full min-h-[120px] resize-y rounded-md border border-border bg-surface p-3 font-mono text-base text-text focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/50"></textarea>
                    </div>
                    <button type="submit" class="w-full inline-flex items-center justify-center rounded-md border border-heading bg-heading py-3 px-8 font-mono font-bold text-text no-underline transition-colors duration-200 hover:border-[#D36C52] hover:bg-[#D36C52] hover:text-text">Send Message</button>
                </form>
            </div>
            <div class="rounded-lg border border-border bg-surface p-8">
                <h3 class="m-0 mb-2 font-mono text-xl font-bold text-accent">Join My Newsletter</h3>
                <p class="mb-6 text-[0.95rem] leading-relaxed text-text-light">Subscribe to receive updates on my latest projects, articles, and design resources directly in your inbox. No spam, ever.</p>
                <form action="#" method="POST">
                    <div class="mb-6">
                        <label for="newsletter-email" class="mb-2 block text-sm font-medium text-text">Email Address</label>
                        <input type="email" id="newsletter-email" name="email" required class="box-border w-full rounded-md border border-border bg-surface p-3 font-mono text-base text-text focus:border-accent focus:outline-none focus:ring-2 focus:ring-accent/50">
                    </div>
                    <button type="submit" class="w-full inline-flex items-center justify-center rounded-md border border-heading bg-heading py-3 px-8 font-mono font-bold text-text no-underline transition-colors duration-200 hover:border-[#D36C52] hover:bg-[#D36C52] hover:text-text">Subscribe</button>
                </form>
                <p class="mt-6 mb-0 text-center text-xs text-text-light">Your privacy is important. I'll never share your email.</p>
            </div>
        </div>
    </section>

    

    <hr class="my-4 border-t-2 border-dashed border-accent/50">

    <section class="log-overview w-full">
        <h2 class="m-0 mb-6 border-b border-border pb-2 font-mono font-medium text-heading text-xl before:mr-2 before:font-normal before:text-text-light before:content-['##'] md:text-2xl">Log Overview</h2>
        <div class="grid grid-cols-[repeat(auto-fit,minmax(300px,1fr))] gap-6">
            <article>
                <a href="/thoughts/post-slug-1" class="group flex h-full rounded-lg border border-border bg-surface no-underline transition-transform duration-200 ease-out hover:-translate-y-1 hover:shadow-lg">
                    <div class="flex flex-col p-6">
                        <div class="aspect-video overflow-hidden">
                            <img alt="Abstract code on a screen" class="h-full w-full object-cover transition-transform duration-300 ease-out group-hover:scale-105">
                        </div>
                        <p class="mb-2 text-xs text-text-light">Film Review · 6 min read</p>
                        <h3 class="m-0 mb-3 font-mono text-xl font-bold text-accent transition-colors duration-200 group-hover:text-heading group-hover:underline">Dune: A Masterclass in World-Building</h3>
                        <p class="mb-6 flex-grow text-[0.95rem] leading-relaxed text-text">Denis Villeneuve's adaptation of the sci-fi epic is a cinematic triumph, blending stunning visuals with a deeply resonant narrative. A closer look at what makes it unforgettable.</p>
                        <div class="flex flex-wrap gap-2">
                            <span class="rounded-full bg-[rgba(106,153,78,0.2)] py-1 px-3 text-xs font-medium text-[#6A994E]">Film</span>
                            <span class="rounded-full bg-[rgba(108,113,196,0.15)] py-1 px-3 text-xs font-medium text-[#6C71C4]">Sci-Fi</span>
                            <span class="rounded-full bg-[rgba(108,117,125,0.2)] py-1 px-3 text-xs font-medium text-[#6c757d]">Review</span>
                        </div>
                    </div>
                </a>
            </article>
            <article>
                <a href="/thoughts/post-slug-2" class="group flex h-full rounded-lg border border-border bg-surface no-underline transition-transform duration-200 ease-out hover:-translate-y-1 hover:shadow-lg">
                     <div class="flex flex-col p-6">
                        <div class="aspect-video overflow-hidden">
                            <img alt="Abstract code on a screen" class="h-full w-full object-cover transition-transform duration-300 ease-out group-hover:scale-105">
                        </div>
                        <p class="mb-2 text-xs text-text-light">Tech Review · 8 min read</p>
                        <h3 class="m-0 mb-3 font-mono text-xl font-bold text-accent transition-colors duration-200 group-hover:text-heading group-hover:underline">The M4 AstroBook: A Developer's Dream?</h3>
                        <p class="mb-6 flex-grow text-[0.95rem] leading-relaxed text-text">After a month with Apple's latest hardware, I'm sharing my thoughts on its performance, battery life, and whether it's the ultimate machine for modern web development.</p>
                        <div class="flex flex-wrap gap-2">
                            <span class="rounded-full bg-[rgba(0,95,115,0.15)] py-1 px-3 text-xs font-medium text-[#005f73]">Tech</span>
                            <span class="rounded-full bg-[rgba(147,161,161,0.2)] py-1 px-3 text-xs font-medium text-[#839496]">Apple</span>
                            <span class="rounded-full bg-[rgba(108,117,125,0.2)] py-1 px-3 text-xs font-medium text-[#6c757d]">Review</span>
                        </div>
                    </div>
                </a>
            </article>
            <article>
                <a href="/thoughts/post-slug-3" class="group flex h-full rounded-lg border border-border bg-surface no-underline transition-transform duration-200 ease-out hover:-translate-y-1 hover:shadow-lg">
                            <div class="flex flex-col p-6">
                                <p class="mb-2 text-xs text-text-light">Personal Essay · 5 min read</p>
                                <h3 class="m-0 mb-3 font-mono text-xl font-bold text-accent transition-colors duration-200 group-hover:text-heading group-hover:underline">Finding Creative Flow in Augusta</h3>
                                <p class="mb-6 flex-grow text-[0.95rem] leading-relaxed text-text">Moving away from the hustle of a big city was a creative gamble. Here's how the quiet charm of Martinez and the surrounding area has reshaped my daily process and inspiration.</p>
                                <div class="flex flex-wrap gap-2">
                                    <span class="rounded-full bg-[rgba(217,91,138,0.15)] py-1 px-3 text-xs font-medium text-[#D95B8A]">Life</span>
                                    <span class="rounded-full bg-[rgba(108,113,196,0.2)] py-1 px-3 text-xs font-medium text-[#6C71C4]">Creativity</span>
                                    <span class="rounded-full bg-[rgba(253,158,116,0.2)] py-1 px-3 text-xs font-medium text-[#E4865B]">Georgia</span>
                                </div>
                            </div>
                        </a>
                    </article>
                </div>
                <div class="mt-8 text-center">
                    <a href="/thoughts/index" class="inline-flex items-center justify-center rounded-md border border-heading bg-heading py-3 px-8 font-mono font-bold text-text no-underline transition-colors duration-200 hover:border-[#D36C52] hover:bg-[#D36C52] hover:text-text">View All Posts</a>
                </div>
            </section>

    

            <hr class="my-4 border-t-2 border-dashed border-accent/50">

            <section class="resume-overview w-full">
                <h2 class="m-0 mb-6 border-b border-border pb-2 font-mono font-medium text-heading text-xl before:mr-2 before:font-normal before:text-text-light before:content-['##'] md:text-2xl">Credentials Overview</h2>
                <div class="grid grid-cols-1 gap-10 lg:grid-cols-2">
                    <div class="rounded-lg border border-border bg-surface p-6">
                        <h3 class="m-0 mb-6 font-mono text-base font-bold uppercase tracking-wider text-accent">Experience</h3>
                        <div class="relative border-l-2 border-border pb-8 pl-6 last:pb-2 before:absolute before:top-[6px] before:left-[-6px] before:h-2.5 before:w-2.5 before:rounded-full before:border-2 before:border-bg before:bg-accent before:content-['']">
                            <h4 class="m-0 text-lg leading-tight text-text">Senior Product Designer</h4>
                            <p class="mt-1 mb-0 text-sm text-text-light">Innovate Inc. | 2022 - Present</p>
                        </div>
                        <div class="relative border-l-2 border-border pb-8 pl-6 last:pb-2 before:absolute before:top-[6px] before:left-[-6px] before:h-2.5 before:w-2.5 before:rounded-full before:border-2 before:border-bg before:bg-accent before:content-['']">
                            <h4 class="m-0 text-lg leading-tight text-text">UX/UI Designer</h4>
                            <p class="mt-1 mb-0 text-sm text-text-light">Creative Solutions | 2019 - 2022</p>
                        </div>
                         <div class="relative border-l-2 border-border pb-8 pl-6 last:pb-2 before:absolute before:top-[6px] before:left-[-6px] before:h-2.5 before:w-2.5 before:rounded-full before:border-2 before:border-bg before:bg-accent before:content-['']">
                            <h4 class="m-0 text-lg leading-tight text-text">Junior Web Developer</h4>
                            <p class="mt-1 mb-0 text-sm text-text-light">Tech Forward LLC | 2018 - 2019</p>
                        </div>
                    </div>
                    <div class="rounded-lg border border-border bg-surface p-6">
                        <h3 class="m-0 mb-6 font-mono text-base font-bold uppercase tracking-wider text-accent">Education</h3>
                        <div class="relative border-l-2 border-border pb-8 pl-6 last:pb-2 before:absolute before:top-[6px] before:left-[-6px] before:h-2.5 before:w-2.5 before:rounded-full before:border-2 before:border-bg before:bg-accent before:content-['']">
                            <h4 class="m-0 text-lg leading-tight text-text">B.S. in Computer Science</h4>
                            <p class="mt-1 mb-0 text-sm text-text-light">Georgia Institute of Technology | 2018</p>
                        </div>
                        <h3 class="m-0 mb-6 font-mono text-base font-bold uppercase tracking-wider text-accent">Awards</h3>
                         <div class="relative border-l-2 border-border pb-8 pl-6 last:pb-2 before:absolute before:top-[6px] before:left-[-6px] before:h-2.5 before:w-2.5 before:rounded-full before:border-2 before:border-bg before:bg-accent before:content-['']">
                            <h4 class="m-0 text-lg leading-tight text-text">"Best UI" Designathon</h4>
                            <p class="mt-1 mb-0 text-sm text-text-light">Awwwards Interactive | 2023</p>
                        </div>
                    </div>
                </div>
                <div class="mt-8 text-center">
                    <a href="/resume/index" class="inline-flex items-center justify-center rounded-md border border-heading bg-heading py-3 px-8 font-mono font-bold text-text no-underline transition-colors duration-200 hover:border-[#D36C52] hover:bg-[#D36C52] hover:text-text">View Full Résumé</a>
                </div>
            </section>

    

