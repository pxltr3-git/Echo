---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Profile">
    <section class="skills-section px-4 sm:px-6 lg:px-8 text-text">
    <h2 class="m-0 mb-6 border-b border-border pb-2 font-mono font-medium text-heading text-xl before:mr-2 before:font-normal before:text-text-light before:content-['##'] md:text-2xl">My Skills</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <div class="flex flex-col gap-1">
            <div class="flex justify-between text-sm font-medium text-text">
                <span>Astro</span>
                <span>90%</span>
            </div>
            <div class="w-full bg-border rounded-full h-2.5">
                <div class="bg-accent h-2.5 rounded-full" style="width: 90%"></div>
            </div>
        </div>
        <div class="flex flex-col gap-1">
            <div class="flex justify-between text-sm font-medium text-text">
                <span>React</span>
                <span>85%</span>
            </div>
            <div class="w-full bg-border rounded-full h-2.5">
                <div class="bg-accent h-2.5 rounded-full" style="width: 85%"></div>
            </div>
        </div>
        <div class="flex flex-col gap-1">
            <div class="flex justify-between text-sm font-medium text-text">
                <span>JavaScript</span>
                <span>95%</span>
            </div>
            <div class="w-full bg-border rounded-full h-2.5">
                <div class="bg-accent h-2.5 rounded-full" style="width: 95%"></div>
            </div>
        </div>
        <div class="flex flex-col gap-1">
            <div class="flex justify-between text-sm font-medium text-text">
                <span>TypeScript</span>
                <span>80%</span>
            </div>
            <div class="w-full bg-border rounded-full h-2.5">
                <div class="bg-accent h-2.5 rounded-full" style="width: 80%"></div>
            </div>
        </div>
        <div class="flex flex-col gap-1">
            <div class="flex justify-between text-sm font-medium text-text">
                <span>Tailwind CSS</span>
                <span>90%</span>
            </div>
            <div class="w-full bg-border rounded-full h-2.5">
                <div class="bg-accent h-2.5 rounded-full" style="width: 90%"></div>
            </div>
        </div>
        <div class="flex flex-col gap-1">
            <div class="flex justify-between text-sm font-medium text-text">
                <span>Node.js</span>
                <span>75%</span>
            </div>
            <div class="w-full bg-border rounded-full h-2.5">
                <div class="bg-accent h-2.5 rounded-full" style="width: 75%"></div>
            </div>
        </div>
        <div class="flex flex-col gap-1">
            <div class="flex justify-between text-sm font-medium text-text">
                <span>Git</span>
                <span>85%</span>
            </div>
            <div class="w-full bg-border rounded-full h-2.5">
                <div class="bg-accent h-2.5 rounded-full" style="width: 85%"></div>
            </div>
        </div>
        <div class="flex flex-col gap-1">
            <div class="flex justify-between text-sm font-medium text-text">
                <span>Figma</span>
                <span>70%</span>
            </div>
            <div class="w-full bg-border rounded-full h-2.5">
                <div class="bg-accent h-2.5 rounded-full" style="width: 70%"></div>
            </div>
        </div>
    </div>
</section>
</Layout>