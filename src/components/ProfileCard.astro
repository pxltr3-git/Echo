---
interface Props {
  name: string;
  title: string;
  description: string;
  imageUrl: string;
  imageAlt: string;
}

const { name, title, description, imageUrl, imageAlt } = Astro.props;
---

<div class="mx-auto w-full flex flex-col items-start text-center p-6 rounded-lg border border-border bg-surface shadow-lg">
    <img
        src={imageUrl}
        alt={imageAlt}
        class="rounded-full w-32 h-32 object-cover mb-4"
    />
    <h3 class="text-2xl font-bold text-heading mb-1">{name}</h3>
    <p class="text-accent text-lg mb-4">{title}</p>
    <p class="text-text-light leading-relaxed">
        {description}
    </p>
</div>