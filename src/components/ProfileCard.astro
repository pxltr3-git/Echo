---
interface Props {
  name: string;
  title: string;
  description: string;
}

const { name, title, description } = Astro.props;
---

<div class="flex flex-col items-center text-center p-6 rounded-lg border border-border bg-surface shadow-lg">
    <h3 class="text-2xl font-bold text-heading mb-1">{name}</h3>
    <p class="text-accent text-lg mb-4">{title}</p>
    <p class="text-text-light leading-relaxed">
        {description}
    </p>
</div>